{
  "functions": {
    "source": "functions"
  },
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "port": 909
    },
    "functions": {
      "port": 908
    },
    "firestore": {
      "port": 907
    },
    "database": {
      "port": 906
    },
    "hosting": {
      "port": 905
    },
    "pubsub": {
      "port": 904
    },
    "storage": {
      "port": 903
    },
    "ui": {
      "enabled": true,
      "port": 1000
    }
  },
  "remoteconfig": {
    "template": "remoteconfig.template.json"
  }
}
